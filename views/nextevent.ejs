<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Next Event</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <%- include('includes/nav.ejs') %>
  <body>
    <div class="row">
      <div class="col-8 offset-2 mt-3">
        <h1 class="opening heading">Upcoming Event</h1>
        <br />
        <form
          action="/addNextEvent?_method=PUT"
          method="POST"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="title" class="form-label">Event Title</label>
            <input
              name="nextEvent[title]"
              class="form-control"
              type="text"
              placeholder="Title of event"
              required
            />
          </div>

          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="date" class="form-label">Enter Date</label>
              <input
                name="nextEvent[date]"
                class="form-control"
                placeholder="DD-MM-YYYY"
                required
              />
            </div>

            <div class="mb-3 col-md-6">
              <label for="time" class="form-label">Enter Time</label>
              <input
                name="nextEvent[time]"
                class="form-control"
                type="text"
                placeholder="3pm to 5pm"
                required
              />
            </div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="nextEvent[description]"
              class="form-control"
              placeholder="20 to 25 words description only"
              required
            ></textarea>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Poster</label>
            <input name="nextEvent[image]" class="form-control" type="file" />
            required
          </div>

          <div class="mb-3">
            <label for="link" class="form-label"
              >Google form link to register</label
            >
            <input
              name="nextEvent[link]"
              class="form-control"
              type="text"
              placeholder="link"
              required
            />
          </div>

          <button class="btn btn-success mt-3">Update</button>
          <br /><br />
        </form>
      </div>
    </div>
    <script src="/js/form.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
